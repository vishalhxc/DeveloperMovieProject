<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Developer Movie Project</title>
    <link rel="stylesheet" type="text/css" href="~/css/site.css">
    <link rel="stylesheet" type="text/css" href="~/css/bootstrap.min.css">
</head>
<body>
    <header>
        <nav role="navigation" class="navbar navbar-expand-lg">
            <div class="container">
                <a asp-action="Index" asp-controller="Home" class="navbar-brand">DMP</a>
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a asp-action="Index" asp-controller="Movie" class="nav-link">Movies</a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="Index" asp-controller="Genre" class="nav-link">Genres</a>
                        </li>
                        <li class="nav-item">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <a asp-controller="Account" asp-action="Logout" class="nav-link">Logout @User.Identity.Name</a>
                            }
                            else
                            {
                                <a asp-controller="Account" asp-action="Login" class="nav-link">Login</a>
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main class="padded-top">
        @RenderBody()
    </main>
    <footer></footer>
    <script src="js/jquery.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    @RenderSection("Scripts", false)
</body>
</html>
